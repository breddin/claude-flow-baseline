{
  "name": "Claude Flow Development",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:0-18",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-json",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "forwardPorts": [3000, 3001],
  "postCreateCommand": "yes Y | npm install || (chmod +x .devcontainer/setup.sh && ./.devcontainer/setup.sh)",
  "remoteEnv": {
    "DEBIAN_FRONTEND": "noninteractive",
    "CI": "true",
    "DENO_INSTALL_AUTO": "1",
    "SHELL_CONFIG_AUTO": "yes",
    "CLAUDE_FLOW_PORT": "3000",
    "NODE_ENV": "development"
  },
  "secrets": {
    "GITHUB_TOKEN": {
      "description": "GitHub Personal Access Token for Claude Flow GitHub integration",
      "documentationUrl": "https://github.com/settings/tokens"
    }
  }
}
