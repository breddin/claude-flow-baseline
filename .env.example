# Claude Flow v2.0.0 Environment Configuration
# ==========================================
# Copy this file to .env and configure your values

# GitHub Integration (Required for GitHub automation)
# ================================================
# Create a GitHub Personal Access Token at: https://github.com/settings/tokens
# Required scopes: repo, workflow, admin:repo_hook, admin:org_hook
GITHUB_TOKEN=ghp_your_github_token_here

# Optional GitHub Configuration
GITHUB_ORG=your-org
GITHUB_DEFAULT_REPO=main-repo
GITHUB_API_URL=https://api.github.com
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Claude Flow Core Configuration
# =============================
CLAUDE_FLOW_PORT=3000
CLAUDE_FLOW_UI_THEME=dark
CLAUDE_FLOW_LOG_LEVEL=info
CLAUDE_FLOW_AUTO_COMMIT=false
CLAUDE_FLOW_AUTO_PUSH=false
CLAUDE_FLOW_HOOKS_ENABLED=true
CLAUDE_FLOW_TELEMETRY_ENABLED=true
CLAUDE_FLOW_REMOTE_EXECUTION=true
CLAUDE_FLOW_GITHUB_INTEGRATION=true

# MCP (Model Context Protocol) Configuration
# ==========================================
MCP_SERVER_PORT=3001
MCP_TIMEOUT=30000

# Swarm Configuration
# ==================
SWARM_MAX_AGENTS=8
SWARM_DEFAULT_TOPOLOGY=hierarchical
SWARM_PARALLEL_EXECUTION=true

# Memory Configuration
# ===================
MEMORY_PERSISTENCE=true
MEMORY_BACKUP_INTERVAL=3600000

# Optional API Keys
# ================
OPENAI_API_KEY=your_openai_key
ANTHROPIC_API_KEY=your_anthropic_key

# Development Environment
# =======================
NODE_ENV=development
DEBUG=true
LOG_LEVEL=debug
